// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String @unique
  price Int?

  images Image[]

  categories Category[]
}

model Image {
  id Int @id @default(autoincrement())

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  productId Int

  url String
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  products Product[]
}

model User {
  id Int @id @default(autoincrement())

  name String @unique
  cpf  String @unique

  email    String @unique
  password String
}
